@{
ViewData["Title"] = "Perfil";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="align-items: center;">
    <div style="width:600px;">

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-second-primary">
                <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user"></i> Mis Datos</h6>
            </div>
            <div class="card-body">

                <form>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <img id="imgFoto" src="https://images.unsplash.com/photo-1519648023493-d82b5f8d7b8a?w=300"
                                class="rounded mx-auto d-block" style="width: 200px; height: 200px;">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="txtNombre">Nombre</label>
                            <input type="text" class="form-control form-control-sm" disabled id="txtNombre">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="txtCorreo">Username</label>
                            <input type="email" class="form-control form-control-sm" id="txtCorreo">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="txTelefono">Contraseña</label>
                            <input type="text" class="form-control form-control-sm" id="txTelefono">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="txtRol">Rol</label>
                            <input type="text" class="form-control form-control-sm" disabled id="txtRol">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-success btn-sm btn-block"
                                id="btnGuardarCambios">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>